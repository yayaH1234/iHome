<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout       android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_logout"
>

    <TextView
            android:text="Are you sure to log out ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="197dp"
            tools:layout_editor_absoluteX="166dp" android:id="@+id/textView2"/>
    <Button
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="328dp"
            tools:layout_editor_absoluteX="281dp" android:id="@+id/yes"/>
    <Button
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="332dp"
            tools:layout_editor_absoluteX="54dp" android:id="@+id/No"/>



</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>